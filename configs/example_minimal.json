{
  "version": "1.0",
  "name": "Minimal Example",
  "description": "Simple test configuration with fixed parameters",

  "prompt": {
    "template": "{Expression}, portrait, detailed face",
    "negative": "low quality, blurry, bad anatomy"
  },

  "variations": {
    "Expression": "/mnt/d/StableDiffusion/local-sd-generator/variations/test_expressions.txt"
  },

  "generation": {
    "mode": "combinatorial",
    "seed_mode": "progressive",
    "seed": 42,
    "max_images": 5
  },

  "parameters": {
    "width": 512,
    "height": 768,
    "steps": 20,
    "cfg_scale": 7.0,
    "sampler": "Euler a",
    "batch_size": 1,
    "batch_count": 1
  },

  "output": {
    "session_name": "minimal_example",
    "filename_keys": ["Expression"]
  }
}
